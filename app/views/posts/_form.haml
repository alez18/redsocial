=form_for @post,remote: true do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - post.errors.full_messages.each do |message|
          = message
  .mdl-textfield.mdl-js-textfield
    = f.text_area :body, class: 'mdl-textfield__input', rows:'3'
    = f.label :body, "Comparte con la comunidad", class: 'mdl-textfield__label'
    

  .actions
    = f.submit 'publicar', class: 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored'

